from clothes import Clothes
import dress.undress
import dress.dress
from generic.askBoolean import askBoolean

def call(person):
	if (askBoolean('Is it cold outside?')):
		dress.dress.call(person, Clothes.Gloves)  # todo: there might be a clearer way to say we put on a coat, hat and gloves
	else:
		dress.dress.call(person, Clothes.Shoes)